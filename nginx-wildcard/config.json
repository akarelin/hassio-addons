{
  "name": "NGINX for wildcard certificates",
  "version": "0.0.1",
  "slug": "nginx-wildcard",
  "description": "NGINX for wildcard certificates",
  "url": "https://home-assistant.io/",
  "startup": "application",
  "boot": "auto",
  "ports": {
    "80/tcp": 80,
    "443/tcp": 443
   },
  "map": ["ssl", "share"],
  "options": {
    "host": "hassio"
    "domain": ".local",
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
  },
  "schema": {
    "domain": "str",
	"host": "str",
    "certfile": "str",
    "keyfile": "str",
  },
  "image": "homeassistant/{arch}-addon-nginx_wildcard"
}